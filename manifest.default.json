{
    "name": "manifest.default",
    "infrastructure": {
        "provider": "aws",
        "credentialsId": "rd_ibm_aws",
        "endpoint_types": [
            {
                "count": 1,
                "type": "rhel",
                "user": "ec2-user",
                "credentialsId": "rd_ssh_key"
            }
        ]
    },
    "terraform": {
        "aws": {
            "rhel": {
                "ref": "rhel",
                "path": "aws/rhel",
                "file": "aws/rhel/resources.tf"
            }
        }
    },
    "ansible": {
        "endpoint_types": [
            {
                "type": "rhel",
                "playbooks": [
                    {
                        "file": "install_wildfly.yml",
                        "extra_args": [
                            {
                                "enable_firewall": "false"
                            }
                        ],
                        "tags": [
                            "setup", "sample"
                        ]
                    },
                    {
                        "file": "test.yml",
                        "tags": [
                            "test"
                        ]
                    }
                ]
            }
        ] 
    }
}